{
  "name": "jlozovei.github.io",
  "version": "0.0.1",
  "description": "My open source portfolio",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier \"{./,tests}/*.js\" --write",
    "start": "webpack-dev-server",
    "build": "webpack -p --mode production",
    "postbuild": "cp ./README.md ./public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/jlozovei.github.io.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jlozovei/jlozovei.github.io/issues"
  },
  "homepage": "https://jlozovei.github.io",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run format"
    }
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "prettier/prettier": "error"
    }
  },
  "dependencies": {
    "autoprefixer": "^9.7.6",
    "precss": "^4.0.0",
    "rucksack-css": "^1.0.2"
  }
}
